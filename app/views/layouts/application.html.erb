<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w2.org/TR/xhtml11/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= @title %></title>
    <%= stylesheet_link_tag "style" %>
    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag 'acts_as_taggable_stylesheet' %>
  </head>
  <body>
    <div id="header">
      <div id="logo_image">
        <%= link_to image_tag('main_logo_3.png'), {:controller=>'home', :action=>'index'} %>
      </div>
      <% if !session[:user] %>
        <%= render :partial => "user/signin" %>
      <% else %>
        <div id="user_menu">
          Welcome <%= User.find(session[:user]).first_name %> <%= link_to 'Logout', :controller => 'user', :action => 'logout' %>
        </div>
      <% end %>
      <div style="clear: both; height: 0px;"></div>
    </div>
	<div id="advertisement" style="float: left; width: 100%">
		<a href="http://0589e9sx5zssjocso2eqyk7t5b.hop.clickbank.net/" target="_top" 
		   style="margin: 10px 0px 10px 335px;">
			<img src="/images/burn_fat.jpg"/>
		</a>
		<div style="clear: both; height: 0px;"></div>
	</div>
    <%= render :partial=>"shared/sidebar" %>
    <div id="Content">
      <% if flash[:notice] -%>
        <div id="notice"><%= flash[:notice] %></div>
      <% end -%>
      <% if flash[:error] -%>
        <div id="error"><%= flash[:error] %></div>
      <% end -%>
      <%= yield %>
    </div>
	
  </body>
</html>
