<% count = 0 %>
<% books.each do |book| %>
  <% if (count == 0) %>
    <% count = 1 %>
    <div class="book_data_first">
  <% else %>
    <div class="book_data">
  <% end %>
  <%= render :partial => 'book/book_detail', :locals => { :book => book, :search => false } %>
  </div>
<% end %>
<div style="clear:both">&nbsp;</div>
