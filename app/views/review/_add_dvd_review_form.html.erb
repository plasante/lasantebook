<% remote_form_for :review, @review,
                   :url => { :controller => "review",
                             :action => "create" } do |f| %>
    <%= f.hidden_field( :dvd_id, :value => dvd.id ) %>
    <label>Title:</label>
    <%= f.text_field(:title, :size => 60) %><br/><br/><br/><br/>
    <label>Body:</label><br/>
    <%= f.text_area(:body, :cols => 60, :rows => 15) %><br/>
    <%= submit_tag 'Create', :id => "review_submit_btn" %>&nbsp;&nbsp;
<% end %>